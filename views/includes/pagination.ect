<%if @pages > 1: %>
    <div class="pagination <%- @class %>">
        <ul>
            <% for i in [1..@pages]: %>
                <li class="<% if i == (@page + 1): %>active<% end %>"><a  href="<%- @url %>?page=<%- (i-1) %>"><%- i %></a></li>
            <% end %>
        </ul>
    </div>
<% end %>