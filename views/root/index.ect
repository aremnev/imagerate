<!-- index.ect -->
<% extend 'layouts/layout.ect' %>


<% block 'aside-top' : %>
    <h2>Contests</h2>
    <ul class="contests">
        <% for contest in @extra.contests: %>
            <li><a href="/contests/<%- contest._id %>"><%= contest.title %></a></li>
        <% end %>
    </ul>
<% end %>


<% block 'aside-bottom' : %>
<% end %>

<h2>Most Recent Images</h2>
<ul class="slides">
    <% for image, i in @recent_images: %>
        <li class="item"><a href="/images/<%- image._id %>"><img class="img-rounded img-polaroid wait" src="<%- @h.imageUrl(image.image, {width: 400, height: 300, crop: 'fill'}) %>" /></a></li>
    <% end %>
</ul>

<h2>Most Viewed Images</h2>
<% include 'images/list.ect', {images: @viewed_images, h: @h, hideComments: true} %>
