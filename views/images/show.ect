<!-- show.ect -->
<% extend 'layouts/layout.ect' %>


<% block 'aside-top' : %>
    <h2><%- @req.image.title %></h2>
    <% if @req.isAdmin or @req.image.contest.contest.showAuthor or @h.isPastDate(@req.image.contest.contest.dueDate) : %>
        <p><i><%= @t('Author') %>:</i> <a href="/users/<%- @req.image.user.id %>"><%= @req.image.user.name %></a></p>
    <% end %>
    <p><i><%= @t('Contest') %>:</i> <a href="/contests/<%- @req.image.contest.contest._id %>"><%= @req.image.contest.contest.title %> (<%- @h.formatDate(@req.image.contest.contest.dueDate) %>)</a> </p>
    <% if @req.isAdmin() or @h.isPastDate(@req.image.contest.contest.dueDate): %>
        <p><i><%= @t('Rating') %>:</i>
            <span ng-switch on="rating.value">
                <span ng-switch-when="0"><%= @t('Nobody rated this image') %></span>
                <span ng-switch-default>{{rating.value}}</span>
            </span>
        </p>
    <% end %>
    <p><i><%= @t('Uploaded') %>:</i>  <%- @h.formatDate(@req.image.createdAt) %></p>

<% end %>


<% block 'aside-bottom' : %>
    <% if (@req.isAdmin() or @h.isPastDate(@req.image.contest.contest.dueDate)) and !@req.image.contest.contest.exhibition : %>
        <h3 ng-init='likes = <%- JSON.stringify(@likes) %>;' ng-show="likes.length">Who rated it</h3>
        <ul class="likes-for-image">
            <li class="like" ng-repeat="like in likes">
                <span class="userpic"><img ng-src="{{like.user.image}}" alt="{{like.user.name}}" height="32" width="32"/></span>
                <div class="like-tooltip">
                    {{like.user.name}}
                    <span class="rating" ng-init='stars = "â˜…".repeat(like.rating);'>{{stars}}</span>
                </div>
            </li>
        </ul>
    <% end %>
<% end %>
        
    <div class="image-large image-to-rate" ng-controller="RatingController"
        ng-init="initRating({ id: '<%= @req.image.id %>',
                <% if @h.isPastDate(@req.image.contest.contest.dueDate): %>
                value: <%- @req.image.getRating() %>,
                <% end %>
                count: <%- @req.image.contest.evaluationsCount %>,
                byUser: <%- @ratingByUser || 0 %> });"
        <% if @req.isAuthenticated() : %>
             ng-mouseleave="rating.state = rating.defaultState"
        <% end %> >
       <div class="wrap-photo">
		<% if @req.isAdmin(): %>
            	<a href="/images/<%- @req.image._id %>/raw" target="_blank">
            	        <% end %>
            	<img class="show-image img-polaroid big wait" ref="/images/<%- @req.image._id %>/raw" title="<%= @req.image.title %>"
            	     src="<%- @h.imageUrl(@req.image.image, {width: 952, height: 600, crop: 'limit'}) %>" />
            	        <% if @req.isAdmin(): %>
            	</a>
            	        <% end %>
            	<% if @req.isAuthenticated() and @req.image.user._id + '' != @req.user._id + '' : %>
            	    <% include 'includes/rating.ect', { rating: @req.image.getRating(), thumbnail: false, isPast: @h.isPastDate(@req.image.contest.contest.dueDate) } %>
            	<% end %>
				
			<div class="arrow-left"> 
				<span class="arrow"> <
				<!-- 	<a href="/images/<%- @req.image._id-1 %>"> < </a> -->
				</span> 
			</div>
			<div class="arrow-right"> 
				<span class="arrow"> >
					<!-- <a href="/images/<%- @req.image._id+1 %>"> > </a> -->
				</span> 
			</div>
				
		</div>
    </div>

    <div class="comments-block">
        <div class="ajax-add">
            <% if @req.isAuthenticated() : %>

            <form class="comment-form" action="/images/<%- @req.image.id %>/comment">
                <% include 'includes/userpic.ect', {user: @req.user, h: @h} %>
                <input pattern="^(?=\s*\S).*$" name="comment" type="text" maxlength="255" placeholder="<%= @t('Add comment') %>..." /> <input type="submit" class="btn" value="<%= @t('Send') %>" />
            </form>
            <% end %>
            <% include 'comments/comments.ect', {comments: @req.image.comments, h: @h, req: @req } %>
        </div>
    </div>
    <!--
        next/prev usage example
        @req.image.prev contains previous image object
        @req.image.next contains next image object
        prev - <% if @req.image.prev : %>  <%= @req.image.prev._id %> <% end %>
        next - <% if @req.image.next : %>  <%= @req.image.next._id %> <% end %>
    -->
