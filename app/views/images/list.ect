<ul class="thumbnails">
    <% for image in @images : %>
<li>
    <%if @remove: %>
        <span data-action="/images/<%- image.id %>/remove" class="remove"><i class="icon-remove"></i></span>
    <% end %>
    <a class="thumbnail" href="/images/<%- image.id %>"><img src="<%- @h.imageUrl(image.image, {width: 150, height: 150, crop: 'pad'}) %>" alt="<%= image.title %>" /></a>
</li>
    <% end %>
</ul>